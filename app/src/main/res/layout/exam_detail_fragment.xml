<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".mvvm.forum.ExamDetailFragment">

    <TextView
        android:id="@+id/exam_detail_question_number"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="题目1"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_green_rect"
        android:text="单选题"
        app:layout_constraintStart_toEndOf="@id/exam_detail_question_number"
        app:layout_constraintBaseline_toBaselineOf="@id/exam_detail_question_number"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"/>

    <ImageView
        android:id="@+id/exam_detail_collect"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_homepage_filter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/exam_detail_question_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/exam_detail_question_number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:textSize="16dp"
        android:textStyle="bold"
        android:drawableBottom="@drawable/ic_homepage_filter"
        android:drawablePadding="20dp"
        android:text="下面所示的java代码，运行时，会产生（）类型的异常aaaaaaaaaaaaa"/>

    <TextView
        android:id="@+id/exam_detail_option_ic1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/shape_green_border_circle"
        android:text="A"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/exam_detail_question_desc"
        app:layout_constraintStart_toStartOf="parent"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ArithmeticException"
        android:textSize="16dp"
        app:layout_constraintStart_toEndOf="@id/exam_detail_option_ic1"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toTopOf="@id/exam_detail_option_ic1"
        app:layout_constraintBottom_toBottomOf="@id/exam_detail_option_ic1"/>

    <TextView
        android:id="@+id/exam_detail_option_ic2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/shape_green_border_circle"
        android:text="A"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/exam_detail_option_ic1"
        app:layout_constraintStart_toStartOf="parent"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ArithmeticException"
        android:textSize="16dp"
        app:layout_constraintStart_toEndOf="@id/exam_detail_option_ic2"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toTopOf="@id/exam_detail_option_ic2"
        app:layout_constraintBottom_toBottomOf="@id/exam_detail_option_ic2"/>

    <TextView
        android:id="@+id/exam_detail_option_ic3"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/shape_green_border_circle"
        android:text="A"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/exam_detail_option_ic2"
        app:layout_constraintStart_toStartOf="parent"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ArithmeticException"
        android:textSize="16dp"
        app:layout_constraintStart_toEndOf="@id/exam_detail_option_ic3"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toTopOf="@id/exam_detail_option_ic3"
        app:layout_constraintBottom_toBottomOf="@id/exam_detail_option_ic3"/>

    <TextView
        android:id="@+id/exam_detail_option_ic4"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/shape_green_border_circle"
        android:text="A"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/exam_detail_option_ic3"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ArithmeticException"
        android:textSize="16dp"
        app:layout_constraintStart_toEndOf="@id/exam_detail_option_ic4"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toTopOf="@id/exam_detail_option_ic4"
        app:layout_constraintBottom_toBottomOf="@id/exam_detail_option_ic4"/>

</androidx.constraintlayout.widget.ConstraintLayout>